{% extends "./base.njk" %}

{% block header %}
<link rel="stylesheet" href="/photoswipe/photoswipe.css">
<link rel="stylesheet" href="/photoswipe/default-skin/default-skin.css">

{% endblock %}

{% block content %}
    <main class="container mx-auto px-3 mt-12">
        <article class=" w-full flex flex-col md:flex-row">
            <header class="mb-6 w-full md:w-1/2 lg:w-2/3">
                <h1 class="text-black uppercase font-bold">{{ title }}</h1>
                <p class="mb-0">{{ year }}</p>
            </header>
            <div class="w-full md:w-1/2 lg:w-1/3">
                <img class="project__img cursor-pointer" src="/{{ cover }}" id="pswp-button" data-gallery='{{ gallery | galleryData }}' />
                <p class="mb-0">{{ place }}</p>
                <p class="mb-0">Medium: {{ medium }}</p>
                <p class="mb-0">Size: {{ size }}</p>

            </div>
        </article>
    </main>
{% endblock %}

{% block footer %}
    {% include "pswp.njk" %}
{% endblock %}
