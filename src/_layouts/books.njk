{% extends "./base.njk" %}

{% block content %}
    <main class="container mx-auto mt-12">
        <ul class=" w-full relative flex flex-row flex-wrap">
            {% for item in collections.booksSorted %}
                <li class="mb-6 w-full sm:w-1/2 md:w-1/3 lg:w-1/4 px-3">
                    <a class="" href="{{ item.url }}">
                        <img src="/{{ item.data.cover }}" class="block w-full h-auto" />
                        <h2 class="font-normal pt-2 text-black hover:text-gray-600 no-underline text-base">{{ item.data.title }}</h2>
                    </a>
                </li>
            {% endfor %}
        </ul>
    </main>
{% endblock %}